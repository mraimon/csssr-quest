.header
	display grid
	grid-template-columns 1fr 2fr
	grid-template-rows repeat(2, auto)
	grid-column-gap 10px

	@media screen and (max-width: $tabletMedium)
		grid-row-gap 5vh

	&__logo
		grid-column 1 / 2
		max-width 30vw

		&__image
			max-width 30vw

	&__stamp
		justify-self end
		position relative
		top -14px
		right -65px
		max-width 47vw

		@media screen and (max-width: $tabletLarge)
			right 0

	&__title
		position relative
		top -14px
		grid-column 2 / 3
		max-width 100%

		@media screen and (max-width: $tabletMedium)
			grid-column 1 / 3
			justify-self center