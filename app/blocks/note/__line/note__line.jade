mixin note__line(label, text, lineType, lineWidth)
	+e.line
		if(!!label)
			+e.label
				h2= label

		- var lineTypeStyle = lineType ? `_${lineType}` : '_static'
		- var lineWidthStyle = lineWidth ? `_${lineWidth}` : ''
		- var isEditable = lineType==='editable'

		+e.text(class=`${lineTypeStyle} ${lineWidthStyle}` contenteditable=`${isEditable}`)
			p= text
