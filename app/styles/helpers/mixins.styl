// Clear the float on any element.
clearfix()
	&:after
		display table
		clear both
		content ''

// Fix no working `-webkit-text-size-adjust: 100%;` in Android.
fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)

// Set element size
size($width, $height = $width)
	width $width
	height $height

// Set margin on left & right
margin-x($margin-l, $margin-r = $margin-l)
	margin-left $margin-l
	margin-right $margin-r

// Set margin on top & bottom
margin-y($margin-t, $margin-b = $margin-t)
	margin-top $margin-t
	margin-bottom $margin-b

// Set pading on left & right
padding-x($padding-l, $padding-r = $padding-l)
	padding-left $padding-l
	padding-right $padding-r

// Set padding on top & bottom
padding-y($padding-t, $padding-b = $padding-t)
	padding-top $padding-t
	padding-bottom $padding-b


// Set one static retina image
retinaBackground($image, $ext = 'png') {
	background-image url('../images/' + $image + '.' + $ext)

	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		background-image url('../images/' + $image + '@2x.' + $ext)
	}
}

// SVG line background
line-background($height = 7px)
	background-image url('../images/line.svg')
	background-size 780px $height
